<div id="orderModal" class="modal">
  <!-- Modal content -->
  <div class="modal-content">
    <span class="close">&times;</span>
    <div class="wrapper row3">
      <main class="hoc container clear">
        <div class="content">
          <h2 style="margin-top: -75px;" class="heading">Add Orders</h2>
                  <form role="form" style="margin-top: -10px;">
                    <div class="order-form">
                      <label>From</label>
                      <input id="addOrderFromInput" type="text" placeholder="Restaurant Name" class="input">
                    </div>
                    <div class="order-form">
                      <label>Friends</label>
                      <input type="text" placeholder="Friends Or Group Name" class="input">
                    </div>
                    <div class="order-form">
                      <label>Menu Image</label>
                      <input type="file" class="input" style="margin-top: 5px;">
                      <button id="publishOrderBtn" class="btn btn-primary" style="width:12%; margin-top:5px"><i class="fa fa-paper-plane"></i> Publish </button>
                    </div>
                  </form>
                  <div class="menuImage">
                  </div>
                  <div class="one_half">
                    <ul class="nospace group services">
                      <li class="one_quarter" style="width: 613px;margin-top:20px;">
                        <article>
                          <div style="margin-right: 498px;">
                            <h6 class="heading" style="margin-right: -30px;margin-bottom: 8px;">Ahmed Alii</h6>
                            <figure class="avatar"><img src="assets/images/avatar.png" alt=""></figure>
                            <h6 class="heading font-x1" style="margin-top: 13px;"><a href="#">Remove</a></h6>
                          </div>
                        </article>
                      </li>
                    </ul>
                  </div>
                </div>
              </div>
            </div>

          </div>
        </div>
      <div class="clear"></div>
    </main>
  </div>
</div>
</div>


<script>
// Get the modal
var modal = document.getElementById('orderModal');
// Get the button that opens the modal
var btn = document.getElementById("addOrderBtn");
// Get the <span> element that closes the modal
var span = document.getElementsByClassName("close")[0];
// When the user clicks the button, open the modal
btn.onclick = function() {
    modal.style.display = "block";
}
// When the user clicks on <span> (x), close the modal
span.onclick = function() {
    modal.style.display = "none";
}
// When the user clicks anywhere outside of the modal, close it
window.onclick = function(event) {
    if (event.target == modal) {
        modal.style.display = "none";
    }
}
</script>

